.banner
  width 100%
  min-width 1600px
  height 750px
  background url("../../imgs/brand/brand.jpg") no-repeat center center
  background-size 100% 100%
  position relative
  div
    position absolute
    top 220px
    left calc(0 + 46px)
    height 300px
    width calc(50% - 46px)
    text-align right
    overflow hidden
  h3
    font-size 7.2rem
    color #00c1b8
    margin 0 0 35px
    font-weight normal
    position relative
    top -800px
    transition all .5s
    opacity 0
    &:after
      content ""
      position absolute
      top 167px
      right 0
      width 0
      height 4px
      background-color #00c1b8
      transition all .5s 1s
  p
    font-size 3rem
    color #fcc700
    margin 0 0 35px
    position relative
    right 1500px
    transition all .5s .5s
  img
    position absolute
    top 92px
    left 153px
    animation spin 6s linear infinite
.banner.load
  h3
    top 0
    opacity 1
    &:after
      width 56px
  p
    right 0
.brand-text
  width 1400px
  margin 0 auto
  div
    margin-top 120px
  h4, h5
    color #2660ad
  h4
    font-weight normal
    font-size 3.6rem
    margin 0 0 60px
    padding-bottom 34px
    border-bottom 1px solid #999999
  h5
    font-size 2.6rem
    font-weight normal
    margin 20px 0 20px
    position relative
    padding-left 26px
    &:before
      content ""
      position absolute
      top 0
      left 0
      width 6px
      height 32px
      border-radius 3px
      background-color #2660ad
  p
    font-size 2rem
    color #333333
    font-weight 100
    margin 0
    line-height 30px
    margin-left 26px
    margin-right 26px
  .p-margin
    margin-top 42px
  .text-indent
    text-indent 40px
  .p-before
    position relative
    padding-left 26px
    margin-left 0
    &:before
      content ""
      position absolute
      top -4px
      left 0
      width 6px
      height 32px
      border-radius 3px
      background-color #2660ad
.carousel
  height 660px
  position relative
  div
    margin 0 auto
  span
    display inline-block
    font-size 1.6rem
    color #666666
    margin-left 26px
    margin-bottom 27px
  p
    font-size 2rem
    color #2660ad
    font-weight normal
    margin-bottom 15px
    margin-top 15px
  img
    width 520px
    height 320px
  .swiper-container
    width 1140px
    padding 10px
  .swiper-slide
    width 520px !important
    border-bottom 2px solid #2660ad
    box-sizing border-box
    box-shadow 0 0 10px #e0e0e0
  .swiper-wrapper
    width 1140px
  .swiper-button-next,.swiper-button-prev
    position absolute
    top 276px
    width 50px
    height 150px
.brand-footer
  display block
@keyframes spin
  0%
    transform rotate(0deg)
  100%
    transform rotate(360deg)
@media screen and (min-width: 1366px)
  .banner
    min-width 1366px
    height 540px
    img
      width 520px
      height 520px
      top 10px
      left 4%
    div
      top 175px
    h3
      font-size 5.2rem
      margin-bottom 24px
      &:after
        top 117px
    p
      font-size 2.2rem
      margin-bottom 20px
  .brand-text
    width 1016px
    div
      margin-top 60px
    h4
      font-size 2.6rem
      margin-bottom 43px
      padding-bottom 25px
    h5
      font-size 1.8rem
      margin-bottom 15px
      padding-left 20px
      &:before
        height 25px
    p
      font-size 1.6rem
      line-height 20px
      margin 0 0 0 20px
    p.p-margin
      margin-top 25px
    p.p-before
      padding-left 20px
      &:before
        height 24px
        top -2px
    .text-indent
      text-indent 32px
    .carousel
      height 480px
      span
        font-size 1.2rem
        margin-left 26px
        margin-bottom 27px
      p
        font-size 1.6rem
        margin-bottom 12px
        margin-top 12px
      img
        width 378px
        height 232px
      .swiper-container
        width 826px
        height 312px
        margin-top 0
        padding 10px 20px
      .swiper-slide
        width 378px !important
        margin-right 82px!important
        top -126px
      .swiper-wrapper
        width 826px
      .swiper-button-next,.swiper-button-prev
        top 150px
@media screen and (max-width: 750px)
  .banner
    height 148px
    width 100%
    min-width 375px
    background-size 100% 100%
    img
      width 140px
      height 140px
      top 5px
      left 10px
    div
      top 39px
      left 60px
      width 189px
      height 60px
      h3
        font-size 1.8rem
        margin-bottom 5px
        &:after
          top 42px
          height 1px
      p
        display none
      span
        font-size 1.2rem
        color #fcc700
        margin-bottom 9px
        display block
  .brand-text
    width 280px
    .carousel
      overflow hidden
      height 317px
      img
        width 180px
        height 110px
        margin 0 auto
      .swiper-container
        width 826px
        height 312px
        margin-top 0
        padding 0
      .swiper-slide
        /*width 378px !important
        margin-right 82px!important*/
        width 380px !important
        margin-right 80px!important
        top 0
        left 60px
        border none
        box-shadow none
        position relative
        &:after
          content ""
          position absolute
          top 0
          left 0
          width 180px
          height 182px
          background-color transparent
          box-shadow 0 0 10px #c4c4c4
      .swiper-wrapper
        width 826px
      .swiper-button-next,.swiper-button-prev
        top 100px
        height 50px
        width 15px
        background-size 100% 100%
    >div
      margin-top 25px
      h4
        font-size 1.8rem
        padding-bottom 18px
        margin-bottom 30px
        border 0
      h5
        font-size 1.4rem
        padding-left 10px
        &:before
          width 3px
          height 16px
      >p
        font-size 1rem
        margin-left 13px
        line-height 15px
        text-indent 24px
      .text-indent
        text-indent 24px
      .p-before
        padding-left 13px
        &:before
          display none
    >div
      &:first-child
        h4
          border-bottom 1px solid #dddddd
    >div
      &:nth-child(2),&:nth-child(3),&:nth-child(4)
        margin-top 46px
        h4
          margin-bottom 0
          padding-bottom 15px
    >div
      &:nth-child(3)
        p
          text-indent 0
          margin-bottom 5px
        .p-margin
          display none
    >div
      &:last-child
        h4
          padding-bottom 25px
        p
          font-size 1rem
          margin 5px 10px
          text-indent 0
          position relative
          &:after
            content ""
            position absolute
            width 180px
            height 2px
            background-color #2660ad
            top 65px
            left -10px
        span
          font-size .9rem
          margin 5px 10px 0
          display block