.module5-1
  &:hover
    h3
      &:after,&:before
        width 20px
        transition all .6s ease
      &:after
        left calc(100% + 20px)
      &:before
        left calc(0% - 40px)
  h3
    font-size 4rem
    color #666666
    margin 40px auto
    width 200px
    font-weight normal
    position relative
    &:after,&:before
      content ""
      width 68px
      border 2px solid #666666
      border-radius 2px
      position absolute
      top 50%
      transition all .6s ease
    &:after
      left calc(100% + 20px)
    &:before
      left calc(0% - 88px)
  >div
    display flex
    margin-bottom 150px
    overflow hidden
    height 570px
    div
      height 550px
      width 400px
      margin 10px 80px 10px 10px
      box-shadow 1px 1px 15px #d3d3d3
      text-align left
      background-color #fff
      position relative
      top 570px
      &:after
        content ""
        position absolute
        top 0
        left 0
        width 400px
        height 320px
        background rgba(255,255,255,.2)
      &:hover
        &:after
          background rgba(255,255,255,0)
      h4
        font-size 2.8rem
        color #2660ad
        font-weight normal
        margin 40px 30px 13px
        transition all .5s
      img
        height 320px
        width 400px
        transition all .5s
      p
        color #333333
        font-size 1.8rem
        margin 0 30px
        transition all .5s
      span
        display none
      a
        display block
        width 160px
        height 40px
        border 1px solid #666666
        color #666666
        margin 40px 0 0 30px
        text-decoration none
        line-height 40px
        text-align center
        transition all .5s
      a
        &:hover
          border 1px solid #2660ad
          color #2660ad
    div:first-child
      transition all 1s cubic-bezier(0.215, 0.61, 0.355, 1) 0.2s
    div:nth-child(2)
      transition all 1s cubic-bezier(0.215, 0.61, 0.355, 1) 0.4s
    div:last-child
      margin-right 10px
      transition all 1s cubic-bezier(0.215, 0.61, 0.355, 1) 0.6s
  >a
    display block
    width 200px
    height 40px
    border 1px solid #666666
    color #666666
    text-decoration none
    margin 0 auto
    line-height 40px
    text-align center
    font-size 0
  >a
    &:hover
      border 1px solid #2660ad
      color #2660ad
.swiper-slide-active .module5-1
    div
      top 0
.icon-changjiantou:before
  font-size 5rem
  line-height 42px
