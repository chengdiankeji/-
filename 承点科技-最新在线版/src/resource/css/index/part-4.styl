.v-4-box
	position absolute
	width calc(50% - 70px)
	top 50%
	left 0
	padding-right 70px
	transform translateY(-50%)
	color #666
	text-align right
	h3
		position relative
		font-size 5.6rem
		font-weight normal
		line-height 50px
		text-transform Uppercase
		margin 0 0 30px 0
		right -4px
		padding-top 160px
		transition all .5s
	h4
		font-size 3.8rem
		font-weight normal
		line-height 50px
		color #2660ad
		margin 0 0 150px 0
		transition all .5s
	p
		font-size 2.6rem
		line-height 26px
		margin 0 30px 65px 0
		position relative
		transition all .5s
		&:after
			content ''
			position absolute
			display block
			width 6px
			height 6px
			background-color #2660ad
			border-radius 50%
			top 12px
			right -30px
	i
		display none
	a
		display inline-block
		font-size 2.2rem
		line-height 40px
		width 160px
		height 40px
		border 1px solid #666
		color #666
		text-decoration none
		text-align center
		box-sizing border-box
		margin-top 35px
		margin-right 70px
		transition all .5s
		&:hover
			color #2660ad
			border 1px solid #2660ad
@media screen and (max-width:1366px)
	.v-4-box
		h3
			font-size 4.2rem
			margin-bottom 20px
			padding-top 40px
		h4
			font-size 2.8rem
			line-height 28px
			margin-bottom 90px
		i
			display none
		p
			margin-bottom 35px
			margin-right 0
			font-size 2rem
			&:after
				right -12px
		a
			font-size 1.6rem
			margin-right 20px
@media screen and (max-width:750px)
	.swiper-container-v
		.v-bg-4
			background #ffffff
	.v-4-box
		width 280px
		padding 0
		left calc(50% - 140px)
		text-align center
		h3
			font-size 2.2rem
			line-height 22px
			margin-top 0
			margin-bottom 20px
			padding-top 60px
		h4
			margin-bottom 10px
			font-size 2rem
		i
			display block
			font-size 7rem
			color #2660ad
			margin-bottom 20px
		p
			font-size 1.4rem
			width 210px
			height 30px
			background-color #2660ad
			border-radius 10px
			color #ffffff
			line-height 30px
			margin 0 auto 30px
			&:after
				left 24px
				background-color #ffffff
		a
			margin-top 10px
			width 100px
			height 20px
			font-size 1rem
			line-height 18px
			margin-right 0