body
  min-width 1600px
.global-header
  min-width 1600px
  text-align center
  position relative
  >a
    display inline-block
    position absolute
    top 0
    left 100px
    margin-top 7px
  ul
    font-size 1.4rem
    margin 0 auto
    width 845px
    padding 0
    height 70px
    line-height 70px
    display flex
    justify-content space-between
    li
      list-style none
      display inline-block
      a
        display inline-block
        color #666666
        height 35px
        line-height 35px
        padding 0 20px
        border 1px solid #666666
        border-radius 6px
        text-decoration none
      &:hover
        a
          color #2660ad
          border 1px solid #2660ad
  div
    position absolute
    top 0
    right 100px
    font-size 2.4rem
    color #2660ad
    height 70px
    line-height 70px
    i
      margin-right 12px
      font-size 2.6rem
  input
    display none
  label
    img
      display none
.global-title
  text-align center
  min-width 1600px
  h4,h3
    color #2660ad
    text-align center
    font-weight normal
  h4
    font-size 3.2rem
    text-transform uppercase
    margin 90px auto 20px
  h3
    margin-bottom 70px
    font-size 3.6rem
    position relative
    &:after
      content ""
      position absolute
      top 90px
      left calc(50% - 208px)
      width 416px
      border 1px solid #999999
.global-body
  margin-top 50px
  text-align center
  input
    display none
  label
    margin-right 55px
  #share + label
      margin-right 0
  .global-body-span
    color #666666
    font-size 1.6rem
    position relative
    &:after
      content ""
      position absolute
      top 5px
      left -10px
      border 7px solid transparent
      border-left 7px solid #666666
#show_1,#show_2,#show_3
  margin 0 auto
  width 1720px
  text-align left
  margin-top 50px
  a,.images-text
    display inline-block
    height 278px
    width 320px
  a
    margin 0 30px 40px 0
    position relative
    &:nth-child(5n)
      margin-right 0
    &:before
      content "+"
      position absolute
      top 70px
      left calc(50% - 25px)
      font-size 4rem
      color #ffffff
      text-align center
      line-height 45px
      font-weight 100
      width 50px
      height 50px
      background rgba(38,96,175,.6)
      border-radius 50%
      display none
      z-index 10
    &:after
      content ""
      position absolute
      top 0
      left 0
      width 320px
      height 200px
      background rgba(0,0,0,.6)
      display none
    &:hover
      &:after,&:before
        display block
  .images-text
    border-bottom 2px solid #2660ad
    box-sizing border-box
    img
      width 320px
      height 200px
  p
    font-size 1.6rem
    color #000000
    margin-left 22px
    width 298px
    height 18px
    overflow hidden
  span
    font-size 1.2rem
    margin-left 22px
    display inline-block
    height 14px
    width 298px
    overflow hidden
    color #888888
.pagination
  padding-bottom 80px
  span
    font-size 1.8rem
  a
    font-size 1.8rem
#box-1,#box-2,#box-3
  display none
#news:checked ~ #box-1,
#information:checked ~ #box-2,
#share:checked ~ #box-3
  display block
#news:checked + label span,
#information:checked + label span,
#share:checked + label span
  color #2660ad
#news:checked + label span:after,
#information:checked + label span:after,
#share:checked + label span:after
  border 7px solid transparent
  border-left 7px solid #2660ad
.result
  display none
.global-footer
  min-width 1600px
  text-align center
  h5
    color #ffffff
    background-color #333333
    font-size 1.4rem
    font-weight normal
    height 60px
    margin 0
    line-height 60px
    bottom 0
.brand-footer
  display none
.pagination
  .current.prev, .current.next
    border none
    color #333333 !important
  .current
    background-color #ffffff !important
    color #2660ad !important
    border none !important
.pagination
  a
    border none !important
    color #333333 !important
@media screen and (max-width: 1366px)
  body
    min-width 1366px
  .global-header
    min-width 1366px
    height 60px
    a
      left 80px
      margin-top 10px
      img
        height 40px
    ul
      height 60px
      width 611px
      line-height 60px
      li
        a
          font-size 1.2rem
          padding 0 10px
          height 26px
          line-height 26px
    div
      height 60px
      line-height 60px
      font-size 1.6rem
      right 80px
      i
        font-size 2rem
        margin-right 5px
  .global-title
    min-width 1366px
    h4
      margin 50px auto 40px
    h3
      font-size 2.8rem
      margin-bottom 47px
      &:after
        top 53px
        width 490px
        left calc(50% - 245px)
  #show_1,#show_2,#show_3
    width 1215px
    a,.images-text
      width 226px
      height 197px
    .images-text
      img
        width 226px
        height 142px
    p
      margin 9px 15px
      width 196px
      font-size 1.4rem
      height 16px
    span
      font-size 1rem
      margin-left 15px
      margin-right 15px
      width 196px
    a
      margin 0 21px 28px 0
      &:after
        width 226px
        height 142px
      &:before
        top 50px
        left calc(50% - 17px)
        width 34px
        height 34px
        font-size 3rem
        line-height 33px
  #Pagination_1
    margin-top 20px
  .global-footer
    min-width 1366px
    h5
      font-size 1.2rem
      height 50px
      line-height 50px
  .pagination
    span
      font-size 1.6rem
    a
      font-size 1.6rem
@media screen and (max-width: 750px)
  body
    min-width 375px
  .global-header
    min-width 375px
    width 100%
    height 48px
    a
      margin-top 4px
      left calc(50% - 39px)
      img
        height 28px
        margin-top 5px
    div, ul
      display none
    label
      img
        display block
        width 15px
        position absolute
        top 16px
        left 16px
        transition all .2s
      div
        position absolute
        top 0
        left 0
        display none
        width 100%
        height 1000px
        z-index 1
        background-color transparent
    #nav:checked ~ ul
      display block
    #nav:checked ~ label div
      display block
    #nav:checked ~ label img
      transform rotate(90deg)
    .block
      display block
    ul
      position absolute
      top 47px
      left 0
      z-index 30
      width 230px
      height 352px
      flex-direction column
      box-shadow 1px 1px 5px #434343
      li
        display block
        height 40px
        background-color #ffffff
        line-height 40px
        box-sizing border-box
        border-top 1px solid #2660ad
        position relative
        &:last-child
          height 72px
          border-bottom none
          padding-bottom 32px
          &:after
            content ""
            position absolute
            top 40px
            left 0
            width 100%
            border-bottom 1px solid #2660ad
        &:hover
          background-color #f0f0f0
          a
            border none
        a
          border none
          width 100%
          height 100%
          margin 0
          padding 0
          line-height 40px
  .global-title
    width 375px
    min-width 375px
    margin 0 auto
    h4
      margin 30px auto 10px
      font-size 1.6rem
    h3
      font-size 1.8rem
      margin 10px auto
      &:after
        top 30px
        width 260px
        left calc(50% - 130px)
  #show_1,#show_2,#show_3
    width 280px
    margin-top 35px
    a,.images-text
      width 134px
      height 127px
      margin 0 12px 0 0
    .images-text
      border-bottom none
      img
          width 134px
          height 84px
    a
      &:hover
        &:before,&:after
          display none
      &:nth-child(5n)
        margin-right 12px
      &:nth-child(2n)
        margin-right 0
    p
      font-size 1.4rem
      margin 7px 0
      width 134px
      height 14px
    span
      width 134px
      margin 0
      height 10px
      margin-bottom 12px
  .global-body
    margin-top 20px
    label
      margin-right 30px
    .global-body-span
      font-size 1rem
      &:after
        content ""
        position absolute
        top 2px
        left -10px
        border 3px solid transparent
        border-left 3px solid #666666
  #news:checked + label span:after, #information:checked + label span:after, #share:checked + label span:after
    border 3px solid transparent
    border-left 3px solid #2660ad
  .global-footer
    min-width 375px
    overflow hidden
    h5
      font-size .9rem
      height 40px
      line-height 40px
  .brand-footer
    display block
  .pagination
    span
      font-size 1rem
    a
      font-size 1rem

