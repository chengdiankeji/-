.banner
  width 100%
  min-width 1600px
  height 550px
  background url("../../imgs/cooperate/banner.jpg") no-repeat center center
  background-size 100% 100%
  position relative
  overflow hidden
  &:after
    content ""
    position absolute
    top 0
    left 0
    width 100%
    height 550px
    background-color rgba(0, 0, 0, .3)
  h3,p
    font-size 3rem
    position absolute
    color #ffffff
    font-weight 100
    margin 0
    transition all .5s
    text-shadow 0 0 .3rem #fff
    z-index 1
  h3
    top -150px
    left 17%
  h4
    position absolute
    font-size 7.2rem
    color #2660ad
    margin 0
    top -500px
    left 56%
    transform rotate(-7deg)
    font-weight normal
    opacity 0
    transition all .5s
    &:after
      content ""
      position absolute
      width 86px
      height 34px
      top 175px
      left 95%
      transform rotate(7deg)
      opacity 0
      transition all .5s .5s
      background url("../../imgs/cooperate/logo.png") no-repeat center center
  p
    top -100px
    left 28%
.banner.load
  h3
    top 235px
  p
    top 285px
  h4
    top 255px
    opacity 1
    &:after
      opacity 1
.cooperate-text
  margin 0 auto
  width 1375px
  padding-left 25px
  margin-bottom 175px
  div
    background url("../../imgs/cooperate/cooperate.png") no-repeat 100% 55%
  h5
    color #2660ad
    font-size 2.6rem
    font-weight normal
    margin-top 45px
    margin-bottom 32px
    position relative
    &:after
      content ""
      position absolute
      top 0
      left -25px
      width 6px
      height 32px
      background-color #2660ad
      border-radius 3px
  >h5
    margin-top 65px
  span
    color #333333
    font-size 2rem
    font-weight 100
  .span-margin
    display inline-block
    margin-right 90px
  p
    color #333333
    font-size 2rem
    font-weight 100
    text-indent 35px
    margin 0
    line-height 30px
  h4
    font-size 3.6rem
    color #2660ad
    font-weight normal
    text-align center
    margin-top 135px
.cooperate-from
  width 1400px
  text-align center
  display flex
  margin 0 auto
  position relative
  &:after
    content ""
    position absolute
    top 165px
    left calc(50% - 13px)
    border 1px solid #7398ca
    height 235px
  div
    display inline-block
    width 50%
  input
    display none
  label
    font-size 1.8rem
    color #333333
    position relative
    margin-left 45px
    &:after
      content ""
      position absolute
      top 2px
      left -25px
      width 18px
      height 18px
      border 1px solid #2660ad
      border-radius 4px
    &:before
      content ""
      position absolute
      left -22px
      top 5px
      width 14px
      height 14px
      background-color #2660ad
      display none
  h4
    font-size 3.2rem
    color #000000
    font-weight normal
    margin 0
  span
    display inline-block
    margin-top 70px
    margin-bottom 20px
    font-size 1.8rem
    color #333333
  div
    >input
      width 360px
      height 20px
      display block
      font-size 1.8rem
      margin 20px auto
      padding 10px 18px
      border 2px solid #cfcfcf
      border-radius 7px
      outline none
      font-weight 100
    ::-webkit-input-placeholder
      color #999999
    >button
      width 400px
      height 40px
      line-height 40px
      font-size 2rem
      color #ffffff
      background-color #2660ad
      border none
      border-radius 7px
      margin-bottom 160px
      outline none
.apply-for
  h4
    margin-bottom 130px
  p
    font-size 2rem
    color #333333
    text-align left
    margin 50px 0 50px 105px
#enterprise:checked + label:before,
#organization:checked + label:before,
#individual:checked + label:before
  display block
.brand-footer
  display none
@media screen and (max-width: 1366px)
  .banner
    height 440px
    min-width 1366px
    h3
      font-size 2.4rem
    p
      font-size 2.4rem
    h4
      font-size 5.8rem
      &:after
        top 135px
        left 85%
        width 68px
        height 28px
        background-size 100% 100%
  .banner.load
    h3
      top 185px
      left 15%
    p
      top 225px
      left 29%
    h4
      top 200px
  .cooperate-text
    width 1016px
    padding-left 20px
    margin-bottom 90px
    >h5
      margin-top 60px
    h5
      font-size 1.8rem
      margin-bottom 15px
      &:after
        width 4px
        height 25px
        left -20px
    p
      font-size 1.6rem
      line-height 22px
    div
      background url(/static/imgs/cd6fe43a.png) no-repeat 100% 75%
      h4
        font-size 2.6rem
        margin 65px 0 70px
    span
      font-size 1.6rem
    .span-margin
      margin-right 50px
  .cooperate-from
    width 1366px
    &:after
      left 50%
      top 135px
      height 200px
    div
      margin 0 auto
      width 508px
      input
        width 314px
        height 16px
        font-size 1.6rem
      button
        font-size 1.6rem
        width 354px
        height 36px
        line-height 36px
        margin-bottom 110px
    h4
      font-size 2.8rem
    span
      margin-top 60px
      margin-bottom 0
    label
      margin-left 30px
  .apply-for
    width 390px
    h4
      margin-bottom 100px
    p
      font-size 1.6rem
      margin 45px 0
@media screen and (max-width: 750px)
  .banner
    width 100%
    min-width 375px
    background-size 100% 100%
    height 147px
    &:after
      height 147px
    h3, p
      display none
    span
      display block
      font-size 1.2rem
      width 165px
      text-align center
      color #ffffff
      position absolute
      transition all .5s
      text-shadow 0 0 .3rem #fff
      z-index 1
      top -155px
      left 23px
    h4
      font-size 1.4rem
      &:after
        width 44px
        top 40px
        left 55%
        height 15px
  .load.banner
    span
      top 55px
    h4
      top 70px
  .cooperate-from
    width 300px
  .cooperate-text
    width 280px
    h5
        margin-top 30px
        margin-bottom 15px
        font-size 1.2rem
        &:after
          height 16px
          width 3px
      p
        font-size 1rem
        line-height 18px
        text-indent 24px
      div
        background none
        h4
          font-size 1.6rem
          margin 50px 0
        span
          font-size 1rem
        .span-margin
          margin-right 0
          display inline
  .cooperate-from
    display flex
    justify-content center
    flex-direction column
    &:after
      display none
    div
      display block
      &:first-child
        width 210px
        height 255px
        h4
          font-size 1.6rem
        span
          font-size 1rem
          margin-top 30px
        label
          font-size 1rem
          margin-left 13px
          &:after
            width 10px
            height 10px
            top 0
            left -14px
          &:before
            width 6px
            height 6px
            left -11px
            top 3px
        div
          width 204px
          input
            width 180px
            height 10px
            padding 5px 10px
            margin 15px 0
            font-size 1rem
          button
            width 204px
            height 22px
            line-height 22px
            font-size 1rem
    .apply-for
      width 300px
      margin-bottom 40px
      h4
        font-size 1.6rem
        margin 40px 0 25px
      p
        font-size 1rem
        margin 15px 0
  .brand-footer
    display block