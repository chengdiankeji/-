.banner
  position relative
  width 100%
  min-width 1600px
  height 750px
  background url("../../imgs/develop/banner.jpg") no-repeat center center
  background-size 100% 100%
  margin-bottom 150px
  overflow hidden
  transition all .5s
  h3
    font-size 7rem
    color #2660ad
    text-transform uppercase
    margin 0 0 35px 0
    font-weight normal
    position relative
    top -500px
    left 0
    opacity 0
    transition all .5s
  p
    font-size 3.6rem
    margin 15px 0 0 0
    color #ffffff
    width 680px
    position relative
    left -1500px
    transition all .5s .5s
    opacity 0
  div
    position absolute
    top 210px
    left 13%
.banner.load
  h3
    top 0
    opacity 1
  p
    left 0
    opacity 1
.develop-body
  text-align center
  width 1400px
  margin 0 auto
  h4
    font-weight normal
    font-size 3.6rem
    color #2660ad
    position relative
    margin 0 0 100px 0
    &:after,&:before
      content ""
      position absolute
      top 7px
      right calc(50% - 300px)
      background url("../../imgs/develop/develop-drop.png") no-repeat
      width 192px
      height 35px
    &:before
      right calc(50% + 110px)
.i-text-imgs
  div
    width 400px
    height 335px
    display inline-block
    margin-right 100px
    margin-bottom 150px
    &:nth-child(4n)
      margin-right 0
    p,span
      color #333333
    p
      font-size 2.6rem
      margin 40px auto 30px
    span
      font-weight 100
      height 120px
      line-height 30px
      font-size 2rem
      text-align left
      display inline-block
      overflow hidden
    i
      font-size 10rem
      color #2660ad
.develop-text
  transition all .5s
  p
    font-size 2rem
    color #333333
    margin 0
    line-height 30px
  h4
    &:first-child
      margin-bottom 50px
    &:last-child
      margin-top 100px
  h5
    font-size 6rem
    color #2660ad
    margin 90px 0 0 0
    font-weight normal
    position relative
  >span
    font-size 2.4rem
    color #666666
    display inline-block
    width 1100px
    text-indent 60px
    text-align left
    line-height 40px
  div
    p
      font-size 2rem
      color #333333
      margin 0
    span
      width 50px
      font-size 1.6rem
      color #333333
      position absolute
      top 5px
      right -10px
  >div
    width 1100px
    margin 0 auto 150px
    display flex
    justify-content space-between
.develop-carousel
  position relative
  height 790px
  margin-top 150px
  div
    margin 0 auto
  img
    width 223px
    height 456px
  .swiper-container
    width 700px
  .swiper-wrapper
    width 700px
  .swiper-button-next,.swiper-button-prev
    position absolute
    top 276px
    width 50px
    height 150px
    color rgba(153, 153, 153, .3)
    background url("")
    line-height 150px
    &:after
      content ""
      display block
      position absolute
      bottom -215px
      width 496px
      height 33px
      background radial-gradient(ellipse closest-side, rgba(0, 0, 0, .36), rgba(11, 11, 11, .36) 5%, rgba(42, 42, 42, .36) 10%, rgba(74, 74, 74, .36) 15%, rgba(174, 174, 174, .36) 35%, rgba(238, 238, 238, .36) 60%, rgba(255, 255, 255, 0) 100%)
  .swiper-button-next
    &:after
      right 200px
  .swiper-button-prev
    &:after
      left 200px
  i
    font-size 5rem
.hhly_invite_bg
  font-size 1.4rem
.hhly_invite_bd
  font-size 1.4rem
.brand-footer
  display block
@media screen and (max-width: 1366px)
  .banner
    min-width 1366px
    height 540px
    margin-bottom 95px
    div
      left 183px
      top 159px
    h3
      font-size 5rem
      margin-bottom 30px
    p
      font-size 2.6rem
      margin-top 5px
  .develop-body
    width 1366px
    h4
      font-size 3.4rem
  .i-text-imgs
    width 1016px
    margin 0 auto
    div
      width 283px
      margin-right 80px
      margin-bottom 60px
      &:nth-child(4n)
        margin-right 0
      p
        font-size 2rem
        margin 25px 0 20px
      span
        font-size 1.6rem
        line-height 25px
    h4
      margin-bottom 80px
  .i-text-imgs
    div
      i
        font-size 8rem
  .develop-text
    width 1016px
    margin 0 auto
    >div
      width 1016px
      margin-bottom 110px
    h4
      margin-bottom 65px
    span
      width 1016px
      font-size 2rem
    h5
      font-size 5.4rem
      position relative
    div
      p
        font-size 1.6rem
      span
        font-size 1.6rem
        right -20px
  .develop-carousel
    width 1206px
    margin 100px auto 0
    img
      width 214px
      height 438px
    h4
      margin-bottom 80px
  .swiper-button-next,.swiper-button-prev
    &:after
      bottom -165px !important
  .swiper-button-next
    &:after
      right 110px !important
  .swiper-button-prev
    &:after
      left 110px!important
@media screen and (max-width: 750px)
  .banner
    height 148px
    width 100%
    min-width 375px
    margin-bottom 28px
    div
      left 30px
      top 45px
    h3
      font-size 1.6rem
      margin-bottom 7px
    p
      display none
    span
      display block
      color #ffffff
      font-size 1rem
      margin-top 4px
      position relative
      left -1500px
      transition all .5s .5s
      opacity 0
  .load.banner
    span
      left 0
      opacity 1
  .develop-body
    width 280px
    h4
      font-size 1.5rem
      margin-bottom 32px
      &:before, &:after
        width 52px
        height 12px
        background-size 100% 100%
        top 4px
      &:before
        left 43px
      &:after
        left 185px
  .i-text-imgs, .develop-text, .develop-carousel
    overflow hidden
    width 280px
  .i-text-imgs
    div
      width 190px
      height 190px
      margin 0 0 34px
      overflow hidden
      i
        font-size 5rem
      p
        font-size 1.4rem
        margin 15px 0
      span
        line-height 14px
        height 100px
        font-size 1rem
  .develop-text
    h4
      margin-bottom 30px
    >div
      margin-bottom 25px
      width 280px
      flex-wrap wrap
      height 220px
      div
        width 140px
        height 100px
        h5
          font-size 3rem
          margin-top 40px
          span
            font-size .8rem
            left 70px
        p
          font-size 1rem
    p
      font-size 1rem
      line-height 20px
    >span
      font-size 1rem
      line-height 22px
      width 280px
      text-indent 24px
  .develop-carousel
    margin-top 44px
    height 600px
  .swiper-slide
    &:first-child
      margin-right 280px !important
  .swiper-button-next,.swiper-button-prev
    i
      display none
  .swiper-button-prev
    &:after
      display none !important
  .swiper-button-next
    &:after
      right -120px !important
      top 220px !important